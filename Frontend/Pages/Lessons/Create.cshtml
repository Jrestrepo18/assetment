@page
@model OnlineCoursesPlatform.Web.Pages.Lessons.CreateModel
@{
    ViewData["Title"] = "Crear Lección";
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Courses/Index">Cursos</a></li>
        <li class="breadcrumb-item"><a asp-page="/Courses/Details" asp-route-id="@Model.CourseId">Curso</a></li>
        <li class="breadcrumb-item active" aria-current="page">Nueva Lección</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Crear Nueva Lección</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Lesson.CourseId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Lesson.Title" class="form-label">Título de la Lección *</label>
                        <input asp-for="Lesson.Title" class="form-control" placeholder="Ej: Introducción al tema" />
                        <span asp-validation-for="Lesson.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Lesson.Content" class="form-label">Contenido</label>
                        <textarea asp-for="Lesson.Content" class="form-control" rows="6" 
                                  placeholder="Contenido de la lección..."></textarea>
                        <span asp-validation-for="Lesson.Content" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Lesson.VideoUrl" class="form-label">URL del Video</label>
                            <input asp-for="Lesson.VideoUrl" class="form-control" 
                                   placeholder="https://youtube.com/watch?v=..." />
                            <span asp-validation-for="Lesson.VideoUrl" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Lesson.DurationInMinutes" class="form-label">Duración (minutos) *</label>
                            <div class="input-group">
                                <input asp-for="Lesson.DurationInMinutes" type="number" class="form-control" />
                                <span class="input-group-text">min</span>
                            </div>
                            <span asp-validation-for="Lesson.DurationInMinutes" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i>Crear Lección
                        </button>
                        <a asp-page="/Courses/Details" asp-route-id="@Model.CourseId" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
