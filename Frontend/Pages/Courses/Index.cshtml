@page
@model OnlineCoursesPlatform.Web.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Cursos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-book me-2"></i>Cursos Disponibles</h1>
    @if (Model.IsInstructor)
    {
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Nuevo Curso
        </a>
    }
</div>

<!-- Barra de bÃºsqueda -->
<div class="row mb-4">
    <div class="col-md-6">
        <form method="get" class="d-flex">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Buscar cursos..." />
                <button type="submit" class="btn btn-outline-primary">Buscar</button>
            </div>
        </form>
    </div>
</div>

@if (!Model.Courses.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        @(string.IsNullOrEmpty(Model.SearchTerm) 
            ? "No hay cursos disponibles en este momento." 
            : $"No se encontraron cursos para '{Model.SearchTerm}'.")
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var course in Model.Courses)
        {
            <div class="col">
                <div class="card h-100 shadow-sm course-card">
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-book text-white" style="font-size: 4rem;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text text-muted">
                            @(course.Description.Length > 100 
                                ? course.Description.Substring(0, 100) + "..." 
                                : course.Description)
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-primary">@course.FormattedDuration</span>
                            <span class="badge bg-success">@course.LessonsCount lecciones</span>
                        </div>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="bi bi-person me-1"></i>@course.InstructorName
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                        <span class="h5 mb-0 text-primary">@course.FormattedPrice</span>
                        <a asp-page="Details" asp-route-id="@course.Id" class="btn btn-outline-primary">
                            Ver detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .course-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
