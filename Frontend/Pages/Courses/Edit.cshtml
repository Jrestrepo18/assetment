@page "{id:guid}"
@model OnlineCoursesPlatform.Web.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Editar Curso";
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="Index">Cursos</a></li>
        <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Id">@Model.Course.Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">Editar</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning">
                <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Editar Curso</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Course.Title" class="form-label">Título del Curso *</label>
                        <input asp-for="Course.Title" class="form-control" />
                        <span asp-validation-for="Course.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Course.Description" class="form-label">Descripción *</label>
                        <textarea asp-for="Course.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Course.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Course.Price" class="form-label">Precio (USD) *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Course.Price" type="number" step="0.01" class="form-control" />
                            </div>
                            <span asp-validation-for="Course.Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Course.DurationInHours" class="form-label">Duración (horas) *</label>
                            <div class="input-group">
                                <input asp-for="Course.DurationInHours" type="number" class="form-control" />
                                <span class="input-group-text">hrs</span>
                            </div>
                            <span asp-validation-for="Course.DurationInHours" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Course.ImageUrl" class="form-label">URL de Imagen</label>
                        <input asp-for="Course.ImageUrl" class="form-control" />
                        <span asp-validation-for="Course.ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-2"></i>Guardar Cambios
                        </button>
                        <a asp-page="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
