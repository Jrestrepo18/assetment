@inject OnlineCoursesPlatform.Web.Services.AuthApiClient AuthApiClient

<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold" asp-page="/Courses/Index">
            <i class="bi bi-mortarboard-fill me-2"></i>OnlineCoursesPlatform
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Courses/Index">
                        <i class="bi bi-book me-1"></i>Cursos
                    </a>
                </li>
                @if (AuthApiClient.IsAuthenticated() && AuthApiClient.GetCurrentUserRole() is "Instructor" or "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Courses/Create">
                            <i class="bi bi-plus-circle me-1"></i>Crear Curso
                        </a>
                    </li>
                }
            </ul>
            
            <ul class="navbar-nav">
                @if (AuthApiClient.IsAuthenticated())
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>@AuthApiClient.GetCurrentUserName()
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Mi Perfil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configuración</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-page="/Logout">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar Sesión
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light ms-2" href="#">
                            <i class="bi bi-person-plus me-1"></i>Registrarse
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
